<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra difuminada -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#E0E0E0" /> <!-- Color de la sombra -->
        </shape>
    </item>

    <!-- Fondo transparente con borde -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#F3F3F3"/> <!-- Fondo transparente -->
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- Borde sutil -->
        </shape>
    </item>

</layer-list>
